{
  "manifest_version": 2,

  "name": "Open in Perplexity",
  "description": "Add Perplexity to your context menus.",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png"
  },

  "permissions": ["contextMenus"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "scripts": ["js/background.js"]
  }
}
