{
  "manifest_version": 3,

  "name": "Open in Perplexity",
  "description": "Seamlessly search experience with Perplexity",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png"
  },

  "permissions": ["contextMenus"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "service_worker": "js/background.js"
  }
}
